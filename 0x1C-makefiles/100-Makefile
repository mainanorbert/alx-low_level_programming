CC = gcc
SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean oclean fclean re
# specifies that "all," "clean," "oclean," "fclean," and "re"
# are phony targets to prevent issues where 
# Make might mistakenly interpret them as file names.

all: $(OBJ) m.h
	$(CC) $(CFLAGS) -o $(NAME) $(OBJ)

clean:
	$(RM) $(NAME) *~

oclean:
	$(RM) *.o

fclean: clean oclean

re: fclean all
